# k8s/deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: profit-agent
spec:
  replicas: 2
  selector:
    matchLabels:
      app: profit-agent
  template:
    metadata:
      labels:
        app: profit-agent
    spec:
      containers:
      - name: agent
        image: your-docker-registry/autonomous-profit-agent:latest
        env:
        - name: API_KEY
          valueFrom:
            secretKeyRef:
              name: agent-secrets
              key: api_key
        ports:
        - containerPort: 80
